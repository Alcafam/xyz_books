<div class="container my-5">
    <h1>Search Result</h1>
<% for res in @results[:result] do %>
    <div class="row mt-5">
        <div class="col-lg-4 col-md-4 col-sm-12 px-5">
            <%= image_tag "books/"+res['image'], class: "img-fluid" %>
        </div>
        <div class="col-lg col-md col-sm-12">
            <h2><%= res['title'] %></h2>
            <p class="mt-3 fw-bold"><%= res['writers'] %></p>

            <ul class="list-group-numbered mt-5">
                <li>
                    <span class="fw-bold">Edition: </span>
                    <span class="text-purple"><%= res['edition'] %></span>
                </li>
                <li>
                    <span class="fw-bold">Price: </span>
                    <span class="text-purple">PHP <%= res['price'] %></span>
                </li>
                <li>
                    <span class="fw-bold">ISBN: </span>
                    <span class="text-purple"><%= res['isbn_13'] %></span>
                </li>
                <li>
                    <span class="fw-bold">Publication Year: </span>
                    <span class="text-purple"><%= res['year_published'] %></span>
                </li>
                <li>
                    <span class="fw-bold">Publisher: </span>
                    <span class="text-purple"><%= res['publisher'] %></span>
                </li>
            </ul>
        </div>
    </div>
<% end%>
</div>